<% if @vehicle.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@vehicle.errors.count, "error") %>
      prohibited this, please try again:
    </h2>
 
    <ul>
    <% @vehicle.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @vehicle do |f| %>
    <%= f.label :year %>
    <br>
    <%= f.text_field :year %>
    <br>
    <%= f.label :make %>
    <br>
    <%= f.text_field :make %>
    <br>
    <%= f.label :model %>
    <br>
    <%= f.text_field :model %>
    <br>
    <%= f.label :trim %>
    <br>
    <%= f.text_field :trim %>
    <br>
    <%= f.label :horsepower %>
    <br>
    <%= f.number_field :horsepower %>
    <br>
    <%= f.submit %>
<% end %>