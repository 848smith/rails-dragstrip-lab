<% if @track.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@track.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @track.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @track do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :location %>
    <br>
    <%= f.text_field :location %>
    <br>
    <%= f.label :weather %>
    <br>
    <%= f.text_field :weather %>
    <br>
    <%= f.label :distance, "Distance (miles)" %>
    <br>
    <%= f.text_field :distance%>
    <br>
    <%= f.submit %>
<% end %>